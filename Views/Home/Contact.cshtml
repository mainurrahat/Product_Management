@{
    ViewData["Title"] = "Contact";
}

<!-- Load EmailJS SDK -->
<script type="text/javascript" src="https://cdn.emailjs.com/dist/email.min.js"></script>
<script type="text/javascript">
    (function () {
        emailjs.init("bn3zUi9FgDAByPmiA"); // Your EmailJS public key
    })();
</script>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .form-wrapper {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    .contact-container {
        background: #fff;
        max-width: 550px;
        width: 100%;
        padding: 1.5rem 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(118, 75, 162, 0.15), 0 6px 30px rgba(102, 126, 234, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .contact-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(118, 75, 162, 0.3), 0 12px 40px rgba(102, 126, 234, 0.4);
        }

    h2 {
        text-align: center;
        color: #4b0082;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 1.2rem;
        user-select: none;
        letter-spacing: 0.03em;
        text-shadow: 0 1px 3px rgba(102, 126, 234, 0.6);
    }

    label {
        display: block;
        font-weight: 600;
        color: #4a4a4a;
        margin-bottom: 0.4rem;
        font-size: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.6rem 0.9rem;
        font-size: 1rem;
        border-radius: 10px;
        border: 2px solid #ccc;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        font-family: inherit;
        box-sizing: border-box;
        margin-bottom: 1rem;
        background: #f9faff;
        color: #333;
        outline-offset: 2px;
    }

        .form-control:focus {
            border-color: #764ba2;
            box-shadow: 0 0 6px rgba(118, 75, 162, 0.5);
            background: #fff;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 90px;
    }

    button.btn-submit {
        width: 100%;
        background: linear-gradient(45deg, #764ba2, #667eea);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.7rem 0;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        box-shadow: 0 3px 10px rgba(118, 75, 162, 0.4);
        transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        user-select: none;
    }

        button.btn-submit:hover {
            background: linear-gradient(45deg, #5e378a, #5063c6);
            box-shadow: 0 5px 20px rgba(80, 99, 198, 0.6);
            transform: scale(1.04);
        }

        button.btn-submit:active {
            transform: scale(0.97);
            box-shadow: 0 2px 8px rgba(80, 99, 198, 0.5);
        }
</style>


<div class="form-wrapper">
    <div class="contact-container" role="main" aria-label="Contact form">
        <h2>Contact Us</h2>

        <form id="contact-form" novalidate>
            <div class="form-group">
                <label for="user_name">Your Name</label>
                <input type="text" class="form-control" id="user_name" name="user_name" required aria-required="true" />
            </div>

            <div class="form-group">
                <label for="user_email">Your Email</label>
                <input type="email" class="form-control" id="user_email" name="user_email" required aria-required="true" />
            </div>

            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" required aria-required="true" />
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" required aria-required="true"></textarea>
            </div>

            <button type="submit" class="btn-submit" aria-label="Send Message">Send Message</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("contact-form").addEventListener("submit", function (e) {
        e.preventDefault();

        emailjs.sendForm('service_iw3w14l', 'template_az43krf', this)
            .then(function () {
                alert("Message sent successfully!");
                document.getElementById("contact-form").reset();
            }, function (error) {
                alert("Failed to send message. Please try again.");
                console.error("FAILED...", error);
            });
    });
</script>
