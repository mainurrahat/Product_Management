<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - productManagement</title>
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/admin-lte/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/productManagement.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <!-- Bootstrap CDN and FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
        }

      

        nav.navbar {
            background: linear-gradient(90deg, #4b6cb7 0%, #182848 100%);
        }

        .navbar-brand {
            color: white !important;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link:focus {
                color: #ffd700 !important;
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">productManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">All Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="MyOrder" asp-action="Index">My Orders</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>

                        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
                        @{
                            var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
                        }
                        @* @if (Context.Session.GetString("UserEmail") != null) *@
                        @* { *@
                        @*     <li class="nav-item"> *@
                        @*         <a class ="nav-link text-white">@userName </a> *@
                        @*         <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a> *@
                        @*     </li> *@
                        @* } *@
                        @* else *@
                        @* { *@
                        @*     <li class="nav-item"> *@
                        @*         <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a> *@
                        @*     </li> *@
                        @* } *@

                        @if (Context.Session.GetString("UserEmail") != null)
                         { 
                             <li class="nav-item dropdown"> 
                                 <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">@userName</a> 
                                 <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown"> 
                                     <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li> 
                                 </ul> 
                             </li> 
                         } 
                         else 
                         { 
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li> 
                             <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li> 
                         } 
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- This is where the page-specific content (e.g., Home, MyOrders, etc.) will be inserted -->
    <main class="container-fluid p-0 flex-grow-1">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white py-3 mt-auto" style="background: linear-gradient(135deg, #182848 0%, #4b6cb7 100%); font-size: 0.9rem;">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4" style="color: #ffd700;">productManagement</h5>
                    <p class="mb-3">Your trusted partner for premium quality products and exceptional service since 2010.</p>
                    <div class="social-icons">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4" style="color: #ffd700;">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-white text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product")" class="text-white text-decoration-none">Products</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "MyOrder")" class="text-white text-decoration-none">My Orders</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Review")" class="text-white text-decoration-none">Reviews</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")" class="text-white text-decoration-none">Contact</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4" style="color: #ffd700;">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3"><i class="fas fa-map-marker-alt me-2" style="color: #ffd700;"></i>123 Business Street, City, Country</li>
                        <li class="mb-3"><i class="fas fa-phone me-2" style="color: #ffd700;"></i>+1 (123) 456-7890</li>
                        <li class="mb-3"><i class="fas fa-envelope me-2" style="color: #ffd700;"></i>info@productmanagement.com</li>
                        <li class="mb-3"><i class="fas fa-clock me-2" style="color: #ffd700;"></i>Mon-Fri: 9AM - 6PM</li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4" style="color: #ffd700;">Newsletter</h5>
                    <p>Subscribe to get updates on new products and offers.</p>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Your Email" aria-label="Your Email">
                            <button class="btn btn-warning" type="submit" style="background-color: #ffd700; color: #182848; border: none;">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center pt-3" style="border-top: 1px solid rgba(255,255,255,0.1);">
                <p class="mb-0">&copy; 2023 productManagement. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@

</body>
</html>

