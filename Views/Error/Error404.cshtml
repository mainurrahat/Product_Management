@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="error-container">
        <img src="https://i.ibb.co/CxNdWtj/404.jpg" alt="404 Error" class="error-image img-fluid mb-4" style="max-height: 300px;">
        <h1 class="display-4 text-danger">Oops! Page Not Found</h1>
        <p class="lead text-muted">The page you're looking for doesn't exist or has been moved.</p>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="/" class="btn btn-primary px-4">
                <i class="fas fa-home me-2"></i>Go to Homepage
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary px-4">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>

<style>
    .error-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .error-image {
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .display-4 {
        font-weight: 700;
        margin-bottom: 1rem;
    }
</style>