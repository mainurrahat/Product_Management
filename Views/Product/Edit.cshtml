@model productManagement.Models.Product

<style>
    /* Wrapper to handle centering without affecting layout */
    .form-wrapper {
        background: linear-gradient(135deg, #667eea, #764ba2, #6a11cb, #2575fc);
        min-height: 100vh;
        padding: 2rem 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.9);
        padding: 2.5rem 3rem;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
        max-width: 600px;
        width: 100%;
        color: #1f2937;
    }

    h2 {
        margin-bottom: 2rem;
        color: #4b0082;
        text-align: center;
        font-weight: 700;
        font-size: 2rem;
        text-shadow: 1px 1px 2px rgba(101, 52, 139, 0.7);
    }

    label {
        font-weight: 600;
        color: #4b0082;
        margin-bottom: 0.3rem;
        display: block;
    }

    .form-control {
        border: 1.5px solid #9d7edd;
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background-color: #f3f0ff;
        color: #4b0082;
    }

        .form-control::placeholder {
            color: #9d7edd;
        }

        .form-control:focus {
            outline: none;
            border-color: #6a11cb;
            box-shadow: 0 0 8px #6a11cb;
            background-color: #e7e0ff;
            color: #4b0082;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
        color: #b00020;
    }

    .btn-primary {
        background: linear-gradient(45deg, #6a11cb, #2575fc);
        border: none;
        padding: 0.6rem 1.5rem;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 8px;
        cursor: pointer;
        color: white;
        box-shadow: 0 4px 15px rgba(101, 52, 139, 0.7);
        transition: background 0.3s ease;
        margin-right: 1rem;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
        }

    .btn-secondary {
        background: #9d7edd;
        border: none;
        padding: 0.6rem 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 8px;
        cursor: pointer;
        color: #4b0082;
        transition: background-color 0.3s ease;
        box-shadow: 0 2px 10px rgba(157, 126, 221, 0.6);
    }

        .btn-secondary:hover {
            background-color: #764ba2;
            color: white;
            box-shadow: 0 4px 15px rgba(118, 75, 162, 0.7);
        }

    form {
        display: flex;
        flex-direction: column;
    }

    .button-group {
        margin-top: 1.8rem;
        display: flex;
        justify-content: flex-start;
    }
</style>

<div class="form-wrapper">
    <div class="form-container">
        <h2>Edit Product</h2>

        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
